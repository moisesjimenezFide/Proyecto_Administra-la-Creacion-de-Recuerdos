@{
    ViewData["Title"] = "Gestión de Empleados";
}

@section Styles {
    <link href="~/Templates/css/menu.css" rel="stylesheet" />

    <style>
        .btn-outline-light-pink {
            color: #E27AB0;
            border-color: #E27AB0;
        }

            .btn-outline-light-pink:hover {
                background-color: #E27AB0;
                color: white;
            }

            .btn-outline-light-pink.active {
                background-color: #E27AB0;
                color: white;
            }

        .btn-custom-pink {
            background-color: #E27AB0;
            color: white;
            border: none;
        }

            .btn-custom-pink:hover {
                background-color: #d66da3;
                color: white;
            }
    </style>
}

<div class="container my-5 text-center">
    <h2 class="mb-4" style="font-family: 'Sono', sans-serif;">
        <i class="fas fa-user-cog me-2"></i> Gestión de Empleados
    </h2>

    <!-- Submenú estilo categorías -->
    <div class="d-flex flex-wrap justify-content-center gap-3 mt-4 mb-5">
        <button class="btn btn-sm btn-outline-light-pink active">
            <i class="fas fa-users-cog me-1"></i> Gestión
        </button>
        <button class="btn btn-sm btn-outline-light-pink">
            <i class="fas fa-calendar-alt me-1"></i> Vacaciones / Permisos
        </button>
        <button class="btn btn-sm btn-outline-light-pink">
            <i class="fas fa-clock me-1"></i> Horarios
        </button>
    </div>

    <!-- Sección: Gestión de empleados -->
    <div>
        <form class="mb-4">
            <div class="mb-2 text-start">
                <label class="form-label fw-bold">Nombre</label>
                <input type="text" class="form-control" placeholder="Ingrese el nombre">
            </div>
            <div class="mb-2 text-start">
                <label class="form-label fw-bold">Apellidos</label>
                <input type="text" class="form-control" placeholder="Ingrese los apellidos">
            </div>
            <div class="mb-2 text-start">
                <label class="form-label fw-bold">Correo electrónico</label>
                <input type="email" class="form-control" placeholder="Ingrese el correo">
            </div>
            <div class="mb-2 text-start">
                <label class="form-label fw-bold">Rol</label>
                <select class="form-control">
                    <option value="" disabled selected>Seleccione una opción</option>
                    <option>Gerente</option>
                    <option>Cajero</option>
                </select>
            </div>
            <div class="mb-3 text-start">
                <label class="form-label fw-bold">Estado</label>
                <select class="form-control">
                    <option value="" disabled selected>Seleccione una opción</option>
                    <option>Activo</option>
                    <option>Inactivo</option>
                </select>
            </div>

            <!-- Botones de acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3 mb-4">
                <button type="reset" class="btn btn-danger me-md-2">Cancelar</button>
                <button type="submit" class="btn btn-custom-pink">Guardar</button>
            </div>
        </form>

        <!-- Tabla de empleados -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Ejemplo de datos estáticos -->
                    <tr>
                        <td>Juan Pérez</td>
                        <td>juan@creandorecuerdos.com</td>
                        <td>Gerente</td>
                        <td>Activo</td>
                        <td>
                            <button class="btn btn-custom-pink">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>María López</td>
                        <td>maria@creandorecuerdos.com</td>
                        <td>Cajero</td>
                        <td>Activo</td>
                        <td>
                            <button class="btn btn-custom-pink">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>