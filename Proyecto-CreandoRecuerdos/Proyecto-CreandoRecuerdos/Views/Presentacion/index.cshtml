@{
    ViewData["Title"] = "Inicio";
}
<div id="container-wrap2">
    <div class="hero-section bg-light py-5 bg-white">
        <div class="container text-center py-5">
            <div class="col-lg-8 col-md-10 mx-auto mb-4">
                <img src="~/Templates/img/Recuerdos.png" alt="Creando Recuerdos" class="img-fluid">
            </div>
        </div>
    </div>

    <div class="features-section py-5 bg-white">
        <div class="container">
            <h2 class="text-center mb-5" style="font-family: 'Sono', sans-serif;">
                <i class="fas fa-star me-2 light-pink"></i>Accesos Rápidos
            </h2>
            <div class="row g-4">

                <!-- Card 1 -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-bread-slice fa-3x mb-3 light-pink"></i>
                            <h5 class="card-title" style="font-family: 'Sono', sans-serif;">Menú</h5>
                            <p class="card-text">Administra los productos disponibles.</p>
                            <a href="#" class="btn btn-outline-light-pink">Ir al Menú</a>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-users fa-3x mb-3 light-pink"></i>
                            <h5 class="card-title" style="font-family: 'Sono', sans-serif;">Clientes</h5>
                            <p class="card-text">Registra y gestiona clientes.</p>
                            <a href="#" class="btn btn-outline-light-pink">Ver Clientes</a>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-file-invoice-dollar fa-3x mb-3 light-pink"></i>
                            <h5 class="card-title" style="font-family: 'Sono', sans-serif;">Ventas</h5>
                            <p class="card-text">Historial de transacciones.</p>
                            <a href="#" class="btn btn-outline-light-pink">Ver Ventas</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Templates/js/footer_visibility_content_zoom_out.js"></script>
}