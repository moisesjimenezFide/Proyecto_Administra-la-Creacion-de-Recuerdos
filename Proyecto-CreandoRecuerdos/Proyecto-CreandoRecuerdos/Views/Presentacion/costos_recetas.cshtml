@{
    ViewData["Title"] = "Gestión de Costos de Recetas";
}

@section Styles {
    <link href="~/Templates/css/menu.css" rel="stylesheet" />

    <style>
        label.form-label {
            font-weight: bold;
        }

        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table th,
        .table td {
            word-wrap: break-word;
            max-width: 200px;
            text-overflow: ellipsis;
        }

        .btn-sm {
            font-size: 0.8rem;
            padding: 0.3rem 0.6rem;
        }

        .btn {
            font-size: 0.9rem;
            padding: 0.25rem 0.5rem;
        }

        .btn-custom-pink {
            background-color: #E27AB0;
            color: white;
            border: none;
        }

            .btn-custom-pink:hover {
                background-color: #d66da3;
                color: white;
            }
    </style>
}

<div class="container mt-4">
    <h2 class="text-center" style="font-family: 'Sono', sans-serif;">
        <i class="fas fa-calculator me-2"></i> Gestión de Costos de Recetas
    </h2>

    <!-- Sección de Registro de Recetas -->
    <div class="my-5">
        <h4 class="mb-4"><strong>Registro de Recetas</strong></h4>
        <form class="row g-3">
            <div class="mb-3 text-start">
                <label for="nombre_receta" class="form-label">Nombre de la receta</label>
                <input type="text" class="form-control" id="nombre_receta" placeholder="Ingrese el nombre de la receta">
            </div>
            <div class="mb-3 text-start">
                <label for="porcion" class="form-label">Porción</label>
                <input type="number" class="form-control" id="porcion" placeholder="Cantidad de porciones">
            </div>
            <div class="mb-3 text-start">
                <label for="volumen" class="form-label">Volumen por porción (ml)</label>
                <input type="number" class="form-control" id="volumen" placeholder="Ej. 250">
            </div>

            <h5 class="mt-4">Materias primas utilizadas</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-sm text-center" id="tabla_materias">
                    <thead>
                        <tr>
                            <th>Materia</th>
                            <th>Cantidad</th>
                            <th>Unidad de medida</th>
                            <th>Costo por unidad (₡)</th>
                            <th>Total costo (₡)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Fila de ejemplo -->
                        <tr>
                            <td><input type="text" class="form-control" value="Harina"></td>
                            <td><input type="number" class="form-control" value="200"></td>
                            <td>
                                <select class="form-select">
                                    <option value="g" selected>Gramos (g)</option>
                                    <option value="ml">Mililitros (ml)</option>
                                    <option value="unidad">Unidad</option>
                                </select>
                            </td>
                            <td><input type="number" class="form-control" value="1.50"></td>
                            <td>₡300.00</td>
                            <td>
                                <button type="button" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="reset" class="btn btn-danger me-md-2">Cancelar</button>
                <button type="button" class="btn btn-custom-pink">Agregar materia prima</button>
            </div>

            <p class="mt-3"><strong>Costo total receta:</strong> <span>₡300.00</span></p>
            <p><strong>Costo por porción:</strong> <span>₡30.00</span></p>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                <button type="reset" class="btn btn-danger me-md-2">Cancelar</button>
                <button type="submit" class="btn btn-custom-pink">Guardar receta</button>
            </div>
        </form>

        <!-- Listado de Costos de Receta -->
        <h4 class="mt-5"><strong>Listado de Costos de Receta</strong></h4>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-sm text-center">
                <thead>
                    <tr>
                        <th>Nombre Receta</th>
                        <th>Porción</th>
                        <th>Volumen (ml)</th>
                        <th>Materias Primas</th>
                        <th>Costo Total Receta (₡)</th>
                        <th>Costo x Porción (₡)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Ejemplo de datos estáticos -->
                    <tr>
                        <td>Panqueques</td>
                        <td>10</td>
                        <td>250</td>
                        <td>5</td>
                        <td>₡300.00</td>
                        <td>₡30.00</td>
                        <td>
                            <button class="btn btn-custom-pink">
                                <i class="fas fa-edit"></i> Editar
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>Crepes</td>
                        <td>8</td>
                        <td>200</td>
                        <td>6</td>
                        <td>₡280.00</td>
                        <td>₡35.00</td>
                        <td>
                            <button class="btn btn-custom-pink">
                                <i class="fas fa-edit"></i> Editar
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>