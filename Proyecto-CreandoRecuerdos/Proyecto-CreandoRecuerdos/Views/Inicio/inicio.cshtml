
@{
    ViewBag.Title = "inicio";
}

<link rel="stylesheet" href="~/Templates/css/home.css" />

<div class="hero-section">
    <div class="floral-decoration floral-top-left"></div>
    <div class="floral-decoration floral-bottom-right"></div>
    <div class="container text-center py-5">
        <div class="logo-container">
            <img src="~/Templates/img/logo.png" alt="Creando Recuerdos" class="img-fluid">
        </div>
        <h1 class="display-5 fw-light mb-4" style="color: var(--texto-oscuro); font-family: 'Sono', sans-serif;">
            Creando Recuerdos Inolvidables
        </h1>
        <p class="lead mx-auto" style="max-width: 600px; color: var(--texto-oscuro);">
            Delicias artesanales hechas con amor y los mejores ingredientes
        </p>
    </div>
</div>

<div class="features-section">
    <div class="container">
        <h2 class="text-center mb-5" style="font-family: 'Sono';">
            <i class="fas fa-star me-2 light-pink"></i>Accesos Rápidos
        </h2>
        <div class="row g-4">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-bread-slice fa-3x mb-3 light-pink"></i>
                        <h5 class="card-title" style="font-family: 'Sono';">Menú</h5>
                        <p class="card-text">Administra los productos disponibles.</p>
                        <a href="#" class="btn btn-outline-light-pink mt-2">Ir al Menú</a>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x mb-3 light-pink"></i>
                        <h5 class="card-title" style="font-family: 'Sono';">Clientes</h5>
                        <p class="card-text">Registra y gestiona clientes.</p>
                        <a href="#" class="btn btn-outline-light-pink mt-2">Ver Clientes</a>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-file-invoice-dollar fa-3x mb-3 light-pink"></i>
                        <h5 class="card-title" style="font-family: 'Sono';">Ventas</h5>
                        <p class="card-text">Historial de transacciones.</p>
                        <a href="#" class="btn btn-outline-light-pink mt-2">Ver Ventas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>